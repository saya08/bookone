<div class="container">
 <div class="row">

<!-- @userではなく、current_userログインしているユーザを表示 -->
	<!-- ４カラムのサイドバー -->
	  <div class="col-lg-4">
	   <h2>User Info</h2>
	    <%= attachment_image_tag current_user, :profile_image, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size:'100x100' %><br>
	    <br>
	    <br>
	    <br>
	    <br>
	    <h3 class="profile-name"><%= current_user.name %></h3>
	    <h3 class="profile-name"><%= current_user.introduction %></h3>
	        <p><%= link_to "
	        Edit",  edit_user_path(current_user),class: "glyphicon glyphicon-wrench" %></p>
	     <h2>Put on record</h2>
	<!-- form_for部分 -->
		<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Body</h4>
			<%= f.text_area :body %>

		    <%= f.submit 'Post' %>

		<% end %>
	   </div>
	<!-- <table class="table table-striped"> -->

	  <div class="col-lg-8">
	      <h2>Books</h2>
		<table class="table table-hover">
		　<tr>
		　　<th>Title</th>
		　　<th>Body</th>
		　　<th colspan="3"></th>
		　</tr>
	<!-- @books.eachでbooksのレコードの数だけ繰り返し、
	book.titleで記事の数だけ繰り返す
	 -->
			<% @books.each do |book| %>
			<!-- |ブロック変数|に合わせる -->
			　<tr>
			　　<td><span><%= book.title %></span></td>
			　　<td><span><%= book.body %></span></td>
				　　<td><%= link_to "Show", book_path(book.id) %></td>

				<% if book.user == current_user %>
				　　<td><%= link_to "Edit", edit_book_path(book.id) %></td>
				　　<td><%= link_to "Destroy", book_path(book.id), method: :delete, data:{confirm: "Can I delete it？"} %></td>
				<% else %>
					<td></td>
					<td></td>
				<% end %>
			　</tr>
			<% end %>
		</table>


	<br>
	<br>

	</div>

 </div>
</div>